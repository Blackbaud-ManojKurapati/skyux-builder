{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noResolve": true,
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "node",
      "jasmine",
      "fontfaceobserver"
    ],
    "baseUrl": ".",
    "paths": {
      "@blackbaud/skyux-builder/runtime/*": ["./runtime/*"],
      "@blackbaud/skyux-builder/runtime": ["./runtime"]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false
}
